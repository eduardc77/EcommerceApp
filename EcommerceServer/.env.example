# Example Environment Configuration
# Copy this file to .env.development, .env.testing, .env.staging, or .env.production
# and update the values accordingly

# Environment (development, testing, staging, production)
APP_ENV=development

# SendGrid Configuration
SENDGRID_API_KEY=your-sendgrid-api-key-here
SENDGRID_FROM_EMAIL=noreply@yourdomain.com
SENDGRID_FROM_NAME=Your App Name

# JWT Configuration (min 32 characters)
JWT_SECRET=your-jwt-secret-key-min-32-chars-change-this

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000
ENABLE_CSRF=true

# Rate Limiting
REQUESTS_PER_MINUTE=60
RATE_LIMIT_WHITELIST=[]
TRUSTED_PROXIES=["127.0.0.1", "::1"]

# Database Configuration
# Use :memory: for in-memory database (testing)
# Use path for file-based database (e.g., dev.sqlite)
DATABASE_PATH=dev.sqlite

# Server Configuration
SERVER_PORT=8080
SERVER_HOST=127.0.0.1
BASE_URL=http://localhost:8080

# Logging (debug, info, notice, warning, error, critical)
LOG_LEVEL=debug 